<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.puntogris.recap.ui.user.edit.EditProfileViewModel" />
        <variable
            name="fragment"
            type="com.puntogris.recap.ui.user.edit.EditProfileFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.edit.EditProfileFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Editar perfil"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24" >

            <ImageView
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:onClick="@{()->fragment.saveProfile()}"
                android:foreground="?actionBarItemBackground"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_check_24" />

            <ProgressBar
                android:id="@+id/saveProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="end"
                android:layout_marginVertical="8dp"
                android:layout_marginEnd="16dp"
                android:layout_width="24dp"
                android:visibility="gone"
                android:layout_height="24dp" />

        </com.google.android.material.appbar.MaterialToolbar>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="16dp"
            imageWithGlide="@{viewModel.userProfile.profileImageUrl}"
            android:onClick="@{()-> fragment.changeProfileImage()}"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView15"
            android:layout_marginVertical="16dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:onClick="@{()-> fragment.changeProfileImage()}"
            android:layout_width="match_parent"
            android:textColor="@color/color_primary"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Cambiar foto de perfil" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameField"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="@dimen/keyline_0"
            app:boxStrokeWidthFocused="@dimen/keyline_0"
            android:hint="Nombre">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@null"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:text="@{viewModel.userProfile.name}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameField"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="@dimen/keyline_0"
            app:boxStrokeWidthFocused="@dimen/keyline_0"
            android:hint="Nombre de usuario">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@null"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:text="@{viewModel.userProfile.name}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionField"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="@dimen/keyline_0"
            app:boxStrokeWidthFocused="@dimen/keyline_0"
            android:hint="Bio">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@null"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@{viewModel.userProfile.bio}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</layout>